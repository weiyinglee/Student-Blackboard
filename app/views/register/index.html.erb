<div class="container">
  <div class="panel panel-info">
    <div class="panel-heading">User Register</div>
    <div class="panel-body">
      <form>
        <div class="form-group">
          <label for="new-account">Create Account</label>
          <input type="email" class="form-control" id="new-account" placeholder="New User Name/Account">
        </div>
        <div class="form-group">
          <label for="new-password">Create Password</label>
          <input type="password" class="form-control" id="new-password" placeholder="New Password">
        </div>
        <div class="form-group">
          <label for="new-password2">Confirm Password</label>
          <input type="password" class="form-control" id="new-password2" placeholder="Enter password again">
        </div>
        <button class="btn btn-primary">Register</button>
      </form>
    </div>
    <div class="panel-footer">
      <h5>Already a user? Let's go <a href="/">Login</a> now!</h5>
    </div>
  <div>
</div>